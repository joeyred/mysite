{
  "name": "brian-hayes-personal-site",
  "version": "0.1.0",
  "description": "A personal site for Brian Hayes.",
  "main": "gulpfile.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joeyred/mysite.git"
  },
  "author": "Joey Hayes <bjoeyhayes@gmail.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/joeyred/mysite/issues"
  },
  "homepage": "https://github.com/joeyred/mysite#readme",
  "devDependencies": {
    "xo": "^0.17.1"
  },
  "xo": {
    "env": ["browser", "node", "jquery"],
    "space": true,
    "globals": [
      "Debug",
      "Overlay",
      "Helper"
    ],
    "rules": {
      "space-before-function-paren": ["error", "never"],
      "key-spacing": [
        "error",
        {
          "align": "value"
        }
      ],
      "no-multi-spaces": [
        "error",
        {
          "exceptions": {
            "Property": true,
            "VariableDeclarator": true
          }
        }
      ],
      "quote-props": ["error", "consistent-as-needed"]
    }
  }
}
