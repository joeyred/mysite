---
title: Styleguide
#permalink: /styleguide/
bodyClass: 'styleguide'
---

extends ../layouts/default.pug

block append stylesheets
  if build.production
    link(
      rel='stylesheet'
      href=helpers.url('/assets/css/styleguide.min.css')
    )
  else
    
    link(
      rel='stylesheet'
      href=helpers.url('/assets/css/styleguide.css')
    )
block title
  title= title

block content
  .wrapper.header
    .container
      .block.sm-12
        h1.sg-page-heading
          | The Super Awesome Great Styleguide

  - var sortedSyleguides = _.sortBy(collections.styleguide, 'order');
  //- - console.log(sortedSyleguides);

  each guide in sortedSyleguides
    - var sgClass =  'sg-' + guide.class;
    
    article.sg-section(id=guide.class class=sgClass)
      header.section-heading.wrapper
        .container
          .block.sm-12
            h1= guide.title
      .main-content.wrapper
        .container
          .block!= guide.contents
