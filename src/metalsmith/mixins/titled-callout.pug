mixin titledCallout(title, color)

  if block
    
    .titled-callout(class=color)
      .titled-callout-heading
        h2= title
      .titled-callout-content-wrapper
        .titled-callout-content
          block

  else
    
    .titled-callout.no-content(class=color)
      .titled-callout-heading
        h2= title
